<UserControl x:Class="ModInstaller.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ModInstaller.View"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622">

    <Grid>

        <Border CornerRadius="0,20,20,0" Margin="0,5,5,0"/>
        <TextBlock Text="Mod Installer" Style="{StaticResource Text_Style}" FontSize="50" VerticalAlignment="Top" Margin="0,110,0,0" HorizontalAlignment="Center" />
        <TextBlock Style="{StaticResource Text_Style}" FontSize="25" VerticalAlignment="Top" Margin="10,174,0,0">
            Mod Installer - это приложение для оптимизации <LineBreak />
            рутинного процесса установки
            всех <LineBreak />
            модификаций для GTA 5.<LineBreak /> <LineBreak />
            Благодаря нашему продукту <LineBreak />
            вы сможете устанавливать ваши моды в 1 клик.
        </TextBlock>

    </Grid>
</UserControl>
